<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.Dashboard.Add.Post6PaymentHourlyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="What hourly rate do you have in mind?"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_gravity="left"
                android:background="@android:color/black"
                android:paddingRight="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="Max file size 20 MB"
                android:textColor="@color/my_light_gray" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/hour2_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 2 - 8/hour"
                android:textColor="@color/black"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="right"
                android:src="@drawable/ic_baseline_chevron_right"
                android:contentDescription="@string/ImageView"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="Max file size 20 MB"
                android:textColor="@color/my_light_gray" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/hour8_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 8 - 15/hour"
                android:textColor="@color/black"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="right"
                android:src="@drawable/ic_baseline_chevron_right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="Max file size 20 MB"
                android:textColor="@color/my_light_gray" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/hour15_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 15 - 25/hour"
                android:textColor="@color/black"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="right"
                android:src="@drawable/ic_baseline_chevron_right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="Max file size 20 MB"
                android:textColor="@color/my_light_gray" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/hour25_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 25 - 50/hour"
                android:textColor="@color/black"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="right"
                android:src="@drawable/ic_baseline_chevron_right"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:text="Max file size 20 MB"
                android:textColor="@color/my_light_gray" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/hour50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 50 +/hour"
                android:textColor="@color/black"
                android:layout_weight="90"
                android:layout_gravity="center"
                android:gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="right"
                android:src="@drawable/ic_baseline_chevron_right"
                />
        </LinearLayout>







    </LinearLayout>


</ScrollView>